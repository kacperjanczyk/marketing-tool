{% extends 'base.html.twig' %}

{% block title %}Clients{% endblock %}

{% block content %}
    <div class="w-full p-4 bg-white border border-gray-200 rounded-lg shadow sm:p-6 md:p-8 dark:bg-gray-800 dark:border-gray-700">
        <div class="flex justify-between items-center">
            <h5 class="mb-2 text-2xl text-gray-900 dark:text-white">Clients table</h5>
            <a href="client/new" type="button" class="text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 me-2 mb-2 dark:bg-blue-600 dark:hover:bg-blue-700 focus:outline-none dark:focus:ring-blue-800">Add new</a>
        </div>
        <div class="relative overflow-x-auto">
            <table class="w-full text-sm text-left rtl:text-right text-gray-500 dark:text-gray-400">
                <thead class="text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400">
                <tr>
                    <th scope="col" class="px-6 py-3">
                        Name
                    </th>
                    <th scope="col" class="px-6 py-3">
                        Address
                    </th>
                    <th scope="col" class="px-6 py-3">
                        City
                    </th>
                    <th scope="col" class="px-6 py-3">
                        Region
                    </th>
                    <th scope="col" class="px-6 py-3">
                        Country
                    </th>
                    <th scope="col" class="px-6 py-3 text-nowrap">
                        Post code
                    </th>
                    <th scope="col" class="px-6 py-3">
                        Owner
                    </th>
                    <th scope="col" class="px-6 py-3">
                        Phone
                    </th>
                    <th scope="col" class="px-6 py-3">
                        Email
                    </th>
                    <th scope="col" class="px-6 py-3">
                        WWW
                    </th>
                    <th scope="col" class="px-6 py-3">
                        TaxID
                    </th>
                    <th scope="col" class="px-6 py-3">
                        Status
                    </th>
                    <th scope="col" class="px-6 py-3">
                        <span class="sr-only">Edit</span>
                    </th>
                </tr>
                </thead>
                <tbody>
                {% for client in clients %}
                    <tr class="bg-white border-b dark:bg-gray-800 dark:border-gray-700 hover:bg-gray-50 dark:hover:bg-gray-600">
                        <td class="px-6 py-4">
                            {{ client.name }}
                        </td>
                        <td class="px-6 py-4">
                            {{ client.address }}
                        </td>
                        <td class="px-6 py-4">
                            {{ client.city }}
                        </td>
                        <td class="px-6 py-4">
                            {{ client.region }}
                        </td>
                        <td class="px-6 py-4">
                            {{ client.country }}
                        </td>
                        <td class="px-6 py-4 text-nowrap">
                            {{ client.postCode }}
                        </td>
                        <td class="px-6 py-4">
                            {{ client.ownerName }} {{ client.ownerSurname }}
                        </td>
                        <td class="px-6 py-4">
                            {{ client.phone }}
                        </td>
                        <td class="px-6 py-4">
                            <a href="mailto:{{ client.email }}">{{ client.email }}</a>
                        </td>
                        <td class="px-6 py-4">
                            <a href="{{ client.www }}" target="_blank">{{ client.www }}</a>
                        </td>
                        <td class="px-6 py-4">
                            {{ client.taxId }}
                        </td>
                        <td class="px-6 py-4">
                            {{ client.status }}
                        </td>
                        <td class="px-6 py-4 text-right">
                            <a href="client/{{ client.id }}/edit" class="font-medium text-blue-600 dark:text-blue-500 hover:underline">Details</a>
                        </td>
                </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
